<h1>All Directors</h1>
<% @directors.each do |director| %>
  <h1><%= director.name %></h1>
  <ul> 
    <% director.films.each do |film| %>
      <li><%= film.title %></li>
    <% end %>
  </ul>
  <h3>Total Box Office Sales: $<%= director.films.sum(:box_office_sales) %><h3>
  <h3>Average Box Office Sale: $<%= director.films.average(:box_office_sales).to_i %><h3>

<%end %>